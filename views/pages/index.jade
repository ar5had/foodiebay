extends ../layouts/layout

block content
  header
    .container-fluid
      .row
        .buttonWrapper.col-xs-12.text-right
          if (user == undefined)
            a(href='/auth/twitter')
              button
                img(src='https://raw.githubusercontent.com/arshdkhn1/nightlife-coordination-app/master/public/images/twitter.png')
                | Log In
          else
            a(href='/logout')
              button
                =user.name.split(" ")[0]
                span.divider
                | Log Out
  main
    .container
      .searchWrapper.text-center
        h2.logo
          span NYTLYF
          span Planner
        h3.heading.text-center.marB30.marT30.
          Make your night plans and R.S.V.P. ahead of time!
        form#searchForm.text-center(action="/search", method="post")
          .searchBarWrapper
            input.searchBar(type="text" placeholder="Enter your city location...")